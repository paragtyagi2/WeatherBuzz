<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bad.weather.Current"
    android:background="@drawable/backtest">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/current_text"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:id="@+id/cityName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityName"
        android:textSize="30dp"
        android:textColor="@color/current_text"
        android:text=""
        android:layout_marginLeft="10dp"
        android:id="@+id/state"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state"
        android:textColor="@color/current_text"
        android:textSize="30dp"
        android:text=""
        android:layout_marginLeft="10dp"
        android:id="@+id/country"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/country"
        android:layout_alignBaseline="@+id/country"
        android:textSize="30dp"
        android:textColor="@color/current_text"
        android:text=""
        android:id="@+id/region"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/country"
        android:layout_marginTop="5dp"
        android:paddingLeft="-50dp"
        android:id="@+id/weather_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/weather_icon"
        android:layout_alignTop="@+id/weather_icon"
        android:layout_alignParentRight="true"
        android:textColor="@color/current_text"
        android:text=""
        android:gravity="right"
        android:paddingRight="10dp"
        android:textSize="80dp"
        android:id="@+id/temp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/weather_icon"
        android:paddingRight="10dp"
        android:textColor="@color/current_text"
        android:gravity="right"
        android:textSize="70dp"
        android:text="&#xb0;C"
        android:id="@+id/degree"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_icon"
        android:layout_marginTop="15dp"
        android:textColor="@color/current_text"
        android:textSize="29dp"
        android:text=""
        android:layout_marginLeft="10dp"
        android:id="@+id/weather_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_text"
        android:textColor="@color/current_text"
        android:layout_marginLeft="10dp"
        android:textSize="29dp"
        android:text=""
        android:id="@+id/day_night"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_night"
        android:layout_marginLeft="10dp"
        android:textColor="@color/current_text"
        android:textSize="20dp"
        android:text=""
        android:paddingLeft="2dp"
        android:id="@+id/date_time"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
</RelativeLayout>
